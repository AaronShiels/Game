{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build: client: install",
            "type": "npm",
            "script": "install",
            "path": "src/Game.Client/",
            "problemMatcher": []
        },
        {
            "label": "build: client",
            "dependsOn": [
                "build: client: install"
            ],
            "type": "npm",
            "script": "build",
            "path": "src/Game.Client/",
            "problemMatcher": []
        },
        {
            "label": "run: client",
            "type": "npm",
            "script": "run",
            "path": "src/Game.Client/",
            "problemMatcher": []
        },
        {
            "label": "docker: build: server",
            "command": "docker",
            "type": "shell",
            "args": [
                "build",
                "-f",
                "./src/Game.Api/Game.Api.Dockerfile",
                "-t",
                "aaronshiels/gameapi:server",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "docker: compose",
            "command": "docker-compose",
            "type": "shell",
            "args": [
                "-f",
                "docker-compose.yml",
                "up",
                "-d"
            ],
            "problemMatcher": []
        },
    ]
}