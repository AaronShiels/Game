{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build: client: install",
            "type": "npm",
            "script": "install",
            "path": "src/Game.Client/",
            "problemMatcher": []
        },
        {
            "label": "run: client",
            "type": "npm",
            "script": "debug",
            "path": "src/Game.Client/",
            "problemMatcher": []
        },
        {
            "label": "docker: build: api",
            "command": "docker",
            "type": "shell",
            "args": [
                "build",
                "-t",
                "aaronshiels/game:api",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Game.Api"
            },
            "problemMatcher": []
        },
        {
            "label": "docker: build: client",
            "command": "docker",
            "type": "shell",
            "args": [
                "build",
                "-t",
                "aaronshiels/game:client",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Game.Client"
            },
            "problemMatcher": []
        },
        {
            "label": "docker: push: api",
            "command": "docker",
            "type": "shell",
            "args": [
                "push",
                "aaronshiels/game:api"
            ],
            "problemMatcher": []
        },
        {
            "label": "docker: push: client",
            "command": "docker",
            "type": "shell",
            "args": [
                "push",
                "aaronshiels/game:client"
            ],
            "problemMatcher": []
        },
        {
            "label": "docker: compose",
            "command": "docker-compose",
            "type": "shell",
            "args": [
                "-f",
                "docker-compose.yml",
                "up",
                "-d"
            ],
            "problemMatcher": []
        },
        {
            "label": "aws: deploy",
            "command": "./tools/deploy.ps1",
            "type": "shell",
            "problemMatcher": []
        }
    ]
}