server {
    location / {
        root /data/www;
    }

    location /api/ {
        proxy_pass http://${SERVER_HOST}:${SERVER_PORT};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        rewrite ^/api(.*)$ $1 break;
    }
}